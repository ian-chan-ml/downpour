<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">


    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/screen_shot_2022_10_27_at_1_42_2" />

    <ImageButton
        android:id="@+id/imageButtoncancelnews1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="cancel"
        android:hint="@string/exit"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="31dp"
        android:background="@null"
        app:srcCompat="@drawable/_cancel" />

    <ScrollView
        android:id="@+id/scrollnews1"
        android:layout_width="wrap_content"
        android:layout_height="411dp"
        android:layout_below="@id/imageView13"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/date_news1"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/description1"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>